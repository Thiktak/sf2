{% extends "ThiktakCoreBundle::layout.html.twig" %}

{% block menu %}
{% endblock %}

{% block body %}
<section>
  <header>
    <hgroup>
      <h1>Groupes</h1>
      <h2>Nouveau groupe</h2>
    </hgroup>
    <aside>
      <ul>
        <li><a href="{{ path('group_new') }}"><i class="icon-plus"></i></a></li>
      </ul>
    </aside>
  </header>

  <article class="wbox">
    <form action="{{ path('group_create') }}" method="post" {{ form_enctype(form) }}>
        {{ form_widget(form) }}
        <p>
            <button type="submit">Create</button>
        </p>
    </form>
  </article>
</section>
{% endblock %}